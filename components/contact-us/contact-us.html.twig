<section id="contact" class="section-container bg-image contact">
  <div class="contact__container">
    <div class="contact__content">
      <div
        class="section-overview section-overview--white-text contact__overview"
      >
        <div class="piped-title">Contact</div>
        <div style="max-width: 100%" class="section-overview__text">
          <h2>
            How can we help?<br />
            We'd love to hear from you.
          </h2>
        </div>
        <div class="section-overview__decoration-divider"></div>
      </div>
      <div class="email-form__container">
        <form data-test-id="email-contact-form" id="emailContactForm">
          <div style="display: none" class="spinner">
            <div class="spinner__ring"></div>
            <div class="spinner__text">Submittingâ€¦</div>
          </div>
          <div class="email-form__controls">
            <div
              data-test-id="first-name"
              class="email-form__control email-form__control--half"
            >
              <input
                type="text"
                required=""
                aria-label="first name"
                class="bixal-input"
                placeholder="FIRST NAME *"
                name="first_name"
                value=""
              />
            </div>
            <div
              data-test-id="last-name"
              class="email-form__control email-form__control--half"
            >
              <input
                type="text"
                required=""
                aria-label="last name"
                class="bixal-input"
                placeholder="LAST NAME *"
                name="last_name"
                value=""
              />
            </div>
            <div
              data-test-id="email"
              class="email-form__control email-form__control--half"
            >
              <input
                type="text"
                required=""
                aria-label="email"
                class="bixal-input"
                placeholder="EMAIL *"
                name="email"
                value=""
              />
            </div>
            <div
              data-test-id="company"
              class="email-form__control email-form__control--half"
            >
              <input
                type="text"
                aria-label="company"
                class="bixal-input"
                placeholder="COMPANY"
                name="company"
                value=""
              />
            </div>
            <div
              data-test-id="email-form-text-area"
              class="email-form__control email-form__control--textarea"
            >
              <textarea
                required=""
                aria-label="message"
                class="bixal-input"
                type="text"
                placeholder="WANT TO FIND OUT MORE OR INTERESTED IN DOING BUSINESS WITH US? TYPE MESSAGE HERE... *"
                name="message"
              ></textarea>
            </div>
            <div class="email-form__control">
              <!-- @TODO replace with new button component. -->
              <button
                data-test-id="email-form-submit"
                aria-label="submit"
                type="submit"
                htmltype="submit"
                class="email-submit-button"
              >
                <div class="bixal-button-content">
                  Submit
                  <div class="icon-container" aria-hidden="true">
                    <svg
                      class="icon right-arrow"
                      width="20px"
                      fill="#fff"
                      version="1.1"
                      id=""
                      xmlns="http://www.w3.org/2000/svg"
                      x="0px"
                      y="0px"
                      viewBox="0 0 24 12"
                      style="enable-background: new 0 0 24 12"
                    >
                      <polygon
                        class="st0"
                        points="24,6 18,0 18,5.4 0,5.4 0,6.7 18,6.7 18,12 "
                      ></polygon>
                    </svg>
                  </div>
                </div>
              </button>
            </div>
          </div>
          <div></div>
        </form>
      </div>
    </div>
    <div class="contact__visual-accent" role="presentation" aria-hidden="true">
      <img
        src="https://bixal.com/static/feb82e7f58a2d6a8537f0e4ce331c61a/b-blue.svg"
        alt="Blue Bixal B logo"
      />
    </div>
  </div>
</section>
