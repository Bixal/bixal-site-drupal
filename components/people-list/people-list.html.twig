<section id="bixal-people" class="section-container  bixal-people">
  <div>
    <div class="dropdown">
      <div data-test-id="filter-by-select" class="dropdown-select " role="button" tabindex="0">Filter By <div
          class="icon-container" aria-hidden="true"><svg id="carrot-down" width="16px" height="10px" viewBox="0 0 16 10"
            version="1.1" xmlns="http://www.w3.org/2000/svg">
            <g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
              <g fill="#000">
                <path
                  d="M15.9348521,2.05473568 L8.15375072,9.93454396 C8.06722618,10.0218187 7.9230186,10.0218187 7.83649406,9.93454396 L0.0648934083,2.05473568 C-0.0216311361,1.96711736 -0.0216311361,1.82108681 0.0648934083,1.73312488 L1.76722141,0 L7.83649406,6.14530898 C7.9230186,6.23327091 8.06722618,6.23327091 8.15375072,6.14530898 L14.2230234,0 L15.9348521,1.73312488 C16.021716,1.82108681 16.021716,1.96711736 15.9348521,2.05473568"
                  id="arrow"></path>
              </g>
            </g>
          </svg></div>
      </div>
      <div data-test-id="filter-by-content" class="dropdown-content ">
        <div name="options" id="options">
          <div class="dropdown-option">
            <input type="radio" name="radio" id="all" value="all" checked="">
            <label
              data-test-id="filter-by-labelAll" class="container" for="all">all
            </label>
          </div>
          <div class="dropdown-option">
            <input type="radio" name="radio" id="leadership" value="leadership">
            <label
              data-test-id="filter-by-labelLeadership" class="container" for="leadership">leadership
            </label>
          </div>
          <div class="dropdown-option">
            <input type="radio" name="radio" id="international" value="international">
            <label
              data-test-id="filter-by-labelInternational" class="container" for="international">international</label>
          </div>
          <div class="dropdown-option">
            <input type="radio" name="radio" id="design" value="design">
            <label
              data-test-id="filter-by-labelDesign" class="container" for="design">design
            </label>
          </div>
          <div class="dropdown-option">
            <input type="radio" name="radio" id="data" value="data">
            <label
              data-test-id="filter-by-labelData" class="container" for="data">data
            </label>
          </div>
          <div class="dropdown-option">
            <input type="radio" name="radio" id="growth" value="growth">
            <label
              data-test-id="filter-by-labelGrowth" class="container" for="growth">growth
            </label>
          </div>
          <div class="dropdown-option">
            <input type="radio" name="radio" id="communications"
              value="communications">
              <label data-test-id="filter-by-labelCommunications" class="container"
              for="communications">communications
            </label>
          </div>
          <div class="dropdown-option">
            <input type="radio" name="radio" id="technology" value="technology">
            <label
              data-test-id="filter-by-labelTechnology" class="container" for="technology">technology
            </label>
          </div>
          <div class="dropdown-option">
            <input type="radio" name="radio" id="delivery" value="delivery">
            <label
              data-test-id="filter-by-labelDelivery" class="container" for="delivery">delivery
            </label>
          </div>
          <div class="dropdown-option">
            <input type="radio" name="radio" id="learning" value="learning">
            <label
              data-test-id="filter-by-labelLearning" class="container" for="learning">learning
            </label>
          </div>
          <div class="dropdown-option">
            <input type="radio" name="radio" id="operations" value="operations">
            <label
              data-test-id="filter-by-labelOperations" class="container" for="operations">operations
            </label>
          </div>
        </div>
      </div>
    </div>

    <ul class="people-list">
      {% for person in people %}
        <li class="person" id="">
          <a
            class="person__link"
            href="javascript:void(0)">
            <div class="person__image-container">
              <img src="https://placehold.co/325x325" alt="">
            </div>
            <div class="person__details">
              <h3 class="person__name">
                {{ person.name | default("Full name") }}
              </h3>
              <div class="person__job-title">
                {{ person.role | default("Role") }}
              </div>
            </div>
          </a>
        </li>
      {% endfor %}
    </ul>

    <div class="people-list__view-more">
      <button class="button bixal-button button--inverted">
        <div data-test-id="view-more" class="bixal-button-content">
          <div>View All</div>
        </div>
      </button>
    </div>
  </div>
</section>
