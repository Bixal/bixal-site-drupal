<section class="bix-section {{ variant ? "bix-section--" ~ variant : "" }} {{ additional_classes }}" {% if image %}
  style="background-image: url('{{ image }}')"
{% endif %}>
  <div class="bix-container">
    {% block header %}
      {% if prefix %}
      <div class="bix-title-prefix">
        {{ prefix }}
      </div>
      {% endif %}
      {% if title %}
      <h2 class="bix-section__title">
        {{ title }}
      </h2>
      {% endif %}
    {% endblock %}

    {% block body %}
      {% if description %}
      <div class="bix-section__body">
        {{ description | raw }}
      </div>
      {% endif %}
    {% endblock %}

    {% block footer %}
      {% if cta.label %}
        <div class="bix-section__footer">
          {# Avoid button inheriting section data. #}
          {% include "@components/button/button.html.twig" with cta only %}
        </div>
      {% endif %}
    {% endblock %}
  </div>
</section>
