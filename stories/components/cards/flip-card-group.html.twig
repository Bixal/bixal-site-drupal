<div class="bix-flip-card-group">
  {% for card in flip_cards %}
  <div class="bix-card-flip bix-card-flip--{{ card.variant | default("accent-warm") }}">
    <div class="bix-card-flip__face bix-card-flip__face--front">

      <img src="{{ card.image }}" aria-hidden="true" alt="">
      <h3 class="bix-card-flip__title">{{ card.title }}</h3>

      <svg class="bix-icon bix-icon-right-arrow" width="20px" version="1.1"
        xmlns="http://www.w3.org/2000/svg" x="0px" y="0px" viewBox="0 0 24 12">
        <polygon class="st0" points="24,6 18,0 18,5.4 0,5.4 0,6.7 18,6.7 18,12"></polygon>
      </svg>
    </div>
    <div class="bix-card-flip__face bix-card-flip__face--back">
      <div>
        <img src="{{ card.image }}" aria-hidden="true" alt="">
        <h3 class="bix-card-flip__title">
          {{ card.title }}
        </h3>
        <p>
          {{ card.description }}
        </p>
      </div>
    </div>

  </div>
  {% endfor %}
</div>
