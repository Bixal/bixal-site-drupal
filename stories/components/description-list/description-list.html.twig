{#
/**
  * Description list
  *
  * Available variables:
  * - variant: Optional string for variant classes.
  *     Accepts: "", "primary-alt", "accent-cool", "accent-cool-alt", "accent-warm", "accent-vivid"
  * - image: Optional image.
  * - title: String title definition list title.
  * - items: Array of strings for definition items.
**/
#}

{% extends "@components/description-list/description-list-base.html.twig" %}

{# Image is decorative and needs to be hidden to avoid a11y issue. #}
{% if image %}
  {% set image %}
    {% include "@partials/media-image.html.twig" with {
      'image': image,
      'additional_classes': ['bix-description-list__media'],
      'aria_hidden': true
    } %}
  {% endset %}
{% endif %}

{% if title is empty %}
  {% set title = 'Health' %}
{% endif %}

{% set items %}
{% if items is empty %}
  <dd>Department of Health and Human Services</dd>
  <dd>Centers for Medicare & Medicaid Services</dd>
  <dd>National Institutes of Health</dd>
  <dd>National Library of Medicine</dd>
{% else %}
  {% for item in items %}
    <dd>
      {{ item }}
    </dd>
  {% endfor %}
{% endif %}
{% endset %}
