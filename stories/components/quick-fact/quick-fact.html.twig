<style>
  .bix-quick-fact-collection {
    --_c-quick-fact-background-color: var(--c-quick-fact-background-color, whitesmoke);
    --_c-quick-fact-text-color: var(--c-quick-fact-text-color, hsl(from gray h s calc(l - 35)));
    display: grid;
    gap: 2rem;
  }

  .bix-quick-fact {
    background-color: var(--_c-quick-fact-background-color);
    border-radius: 0.5rem;
    color: var(--_c-quick-fact-text-color);
    padding: 1rem;
  }

  .bix-quick-fact-collection--accent-cool {
    --c-quick-fact-background-color: var(--c-accent-cool);
    --c-quick-fact-text-color: var(--c-primary);
  }

  .bix-quick-fact-collection--accent-warm {
    --c-quick-fact-background-color: var(--c-accent-vivid);
    --c-quick-fact-text-color: var(--c-primary);
  }

  .bix-quick-fact__title {
    /* font-family: var(--font-heading); */
    /* font-weight: 700; */
    font-size: 4rem;
    font-weight: 800;
    line-height: 1;
    text-shadow: 4px 4px 0px rgba(0, 0, 0, 0.1);
  }

  .bix-quick-fact__description {
    font-style: italic;
    line-height: 1.2;
    margin-block-start: 1.125rem;
    margin-block-end: 0;
  }

  @media screen and (min-width: 800px) {
    .bix-quick-fact-collection--halves {
      grid-template-columns: repeat(2, 1fr);
    }

    .bix-quick-fact-collection--thirds {
      grid-template-columns: repeat(3, 1fr);
    }

    .bix-quick-fact-collection--fourths {
      grid-template-columns: repeat(4, 1fr);
    }

    .bix-quick-fact {
      padding: 2rem;
    }


  }

  @media screen and (min-width: 1200px) {
    .bix-quick-fact__title {
      font-size: 6rem;
    }

    .bix-quick-fact__description {
      font-size: 1.5rem;
      }
  }
</style>

{% if attributes is empty %}
  {% set attributes = create_attribute() %}
{% endif %}

{% set quick_fact_collection_classes = [
  "bix-quick-fact-collection",
  (layout ? "bix-quick-fact-collection--" ~ layout),
  (variant ? "bix-quick-fact-collection--" ~ variant),
] | merge(additional_classes | default([])) %}


<div {{ attributes.addClass(quick_fact_collection_classes)}}>
  {% for item in items %}
    <article class="bix-quick-fact">
      <div class="bix-quick-fact__title" aria-hidden="true">{{ item.title }}</div>
      <p class="bix-quick-fact__description">
        <span class="sr-only">{{ item.title }}</span> {{ item.description }}
      </p>
    </article>
  {% endfor %}
</div>
