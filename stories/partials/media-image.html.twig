{% if attributes is empty %}
  {% set attributes = create_attribute() %}
{% endif %}

<figure{{ attributes.addClass(additional_classes) }} {% if aria_hidden %}{{ attributes.setAttribute('aria-hidden', true) }}{% endif %}>
  {{ image }}
  {% if caption %}
    <figcaption>
      {{ caption }}
    </figcaption>
  {% endif %}
  {{ contextual_links }}
</figure>
