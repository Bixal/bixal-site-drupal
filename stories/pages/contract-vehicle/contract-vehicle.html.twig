{% extends "@pages/base/base.html.twig" %}

{% set heading_type = heading_type | default("h2") %}

{% block content %}
  {% embed "@components/section/section.html.twig" %}
    {% set body %}
      {% for section in sections %}
        <{{ heading_type }}>
          {{ section.title }}
        </{{ heading_type }}>
        {{ section.text | raw }}
      {% endfor %}
    {% endset %}
  {% endembed %}

{% endblock %}
